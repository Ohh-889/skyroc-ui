{
  "name": "skyroc-project",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@10.12.0",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "turbo run build",
    "changelog": "sr changelog",
    "check-types": "turbo run check-types",
    "commit": "sr git-commit",
    "cpn": "tsx script/cp.ts",
    "deploy:playground": "pnpm --filter skyroc-ui-playground deploy",
    "dev": "turbo run dev",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint",
    "lint:fix": "eslint . --fix",
    "postinstall": "tsx script/postinstall.ts",
    "release": "tsx script/release.ts",
    "release:alpha": "tsx script/release.ts --type alpha",
    "release:beta": "tsx script/release.ts --type beta",
    "release:prod": "tsx script/release.ts --type prod",
    "release:rc": "tsx script/release.ts --type rc"
  },
  "dependencies": {
    "@changesets/changelog-github": "0.5.1",
    "@changesets/cli": "2.29.7",
    "@skyroc/cli": "workspace:*",
    "bumpp": "^10.3.1"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "@unocss/eslint-config": "catalog:",
    "create-skyroc": "workspace:*",
    "eslint-plugin-react": "catalog:",
    "eslint-plugin-react-hooks": "catalog:",
    "eslint-plugin-react-refresh": "catalog:",
    "eslint-plugin-sort": "catalog:",
    "prettier": "3.6.0",
    "prettier-plugin-json-sort": "^0.0.2",
    "tailwindcss": "catalog:",
    "tsdown": "catalog:",
    "tsup": "8.5.0",
    "tsx": "catalog:",
    "turbo": "2.5.4",
    "typescript": "catalog:"
  },
  "pnpm": {
    "overrides": {
      "esbuild": "0.25.5"
    }
  }
}
